<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".RecipePromptActivity">

    <EditText
        android:id="@+id/recipePromptEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter recipe name or ingredients"
        android:padding="8dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/primary_text"
        android:inputType="text" />

    <Button
        android:id="@+id/checkIngredientsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Ingredients"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/button_text"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/recipeResponseListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>
